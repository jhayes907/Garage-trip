<h2>Ready to take a road trip?!</h2>

<div class="row">
    <table class="table table-bordered table-striped">
        <thead>
            <th>Name</th>
            <th>Id</th>
            <th>Location</th>
            <th>Tags</th>
        </thead>
        <tbody>
            <% if(Array.isArray(listings) && listings.length > 0) { %>
                <% listings.forEach((listing) => { %>
                    <tr> 
                        <td><a href="/home/<%= listing.id %>">
                            <%= listing.name %>
                        </a></td>
                        <td><%= listing.id %></td>
                        <td><%= listing.location %></td>
                        <td><%= listing.tags %></td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
  </div> 