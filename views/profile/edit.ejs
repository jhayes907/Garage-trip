<h1>Edit</h1>

<p>Id: <%= id %></p>
<p>Name: <%= name %></p>
<p>Email: <%= email %></p>

<form method="POST" action="/profile/<%=user.id%>/?_method=PUT">
    <label>Name</label>
    <input type="text" name="name" value="<%= user.name %>">
    <label>Email</label>
    <input type="text" name="type" value="<%= user.email %>">
    <input type="submit">
</form>