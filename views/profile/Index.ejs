<%- include('../partials/header') %>
<%- include('../partials/hideProfile') %> 
<body> 
    <main>
        <%- include('../partials/profileLayout') %> 
        <div class="row">
            <table class="table table-bordered table-striped">
                <thead>
                    <th><%= currentUser.name %> </th>
                    <th><%= currentUser.email %> </th>
                </thead>
                <tbody>
                    <% if(Array.isArray(user.listings) && user.listings.length > 0) { %>
                        <% user.listings.forEach((listing) => { %>
                            <tr> 
                                <td><a href="/listings/listing/<%= listing.id %>">
                                    <td><%= listing.name %></td>
                                    <td><%= listing.location %></td>
                                    <td><%= listing.content %></td>  
                                </a></td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div> 
    </main>
</body>


