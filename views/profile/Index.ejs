<h3>Welcome to your PROFILE</h3>

<p>Id: <%= id %></p>
<p>Name: <%= name %></p>
<p>Email: <%= email %></p>


<form method="GET" action="/lisitngs/listing">
    <label for="nameFilter">Get by listing name</label>
    <input id="nameFilter" type="text" name="nameFilter">
    <input type="submit">
</form>

<form method="GET" action="/lisitngs/edit">
    <label for="editListing">Edit listing</label>
    <input id="editListing" type="text" name="editListing">
    <input type="submit">
</form>

<a class="btn btn-success" href="./listings/new">Create Listing</a>

<div></div>
<div class="row">
    <table class="table table-bordered table-striped">
        <thead>
            <th>Name</th>
        </thead>
        <tbody>
            <% if(Array.isArray(listings) && listings.length > 0) { %>
                <% listings.forEach((listing) => { %>
                    <tr> 
                        <td><a href="/listings/listing<%= listings.id %>">
                            <%= listings.name %>
                        </a></td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
  </div> 
